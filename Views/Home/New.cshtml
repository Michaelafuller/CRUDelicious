@model Dish

<h1 class="text-center">Add a New Dish!</h1>
<a href="">Home</a>
<form asp-action="Create" asp-controller="Home" method="post">

    <span asp-validation-for="Chef"></span>
    <label asp-for="Chef"></label>
    <input class="form-control mb-3" asp-for="Chef">

    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <input class="form-control mb-3" asp-for="Name">

    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories"></label>
    <input class="form-control mb-3" asp-for="Calories">

    <span asp-validation-for="Tastiness"></span>
    <label asp-for="Tastiness"></label>
    <select class ="form-control mb-3" asp-for="Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>

    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <textarea class="form-control mb-3" asp-for="Description" rows="10"></textarea>
    
    <button class="btn btn-success">Submit</button>
</form>